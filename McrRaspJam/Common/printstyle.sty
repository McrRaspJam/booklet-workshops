%Code listings
\usepackage{listings}
\definecolor{Terminalprogram}{rgb}{0,0.5,0}
\definecolor{BoxTerminal}{rgb}{0,0,0}
\definecolor{BoxCode}{rgb}{0.5,0,0.75}

\lstdefinestyle{Terminal}{
	language=bash,
	frame=leftline,
	rulecolor=\color{BoxTerminal},
	numbers=left,
	tabsize=8,
	basicstyle=\footnotesize\ttfamily,
	showstringspaces=false,
	keywordstyle=\color{Terminalprogram}
}

\definecolor{IDLEcomment}{rgb}{0.75,0,0}
\definecolor{IDLEkey}{rgb}{0.5,0.0,0.5}
\definecolor{IDLEstring}{rgb}{0,0.5,0}

\lstdefinestyle{Python}{
	language=Python,
	frame=leftline,
	rulecolor=\color{BoxCode},
	numbers=left,
	tabsize=8,
	basicstyle=\footnotesize\ttfamily,
	showstringspaces=false,
	%breaklines=true,
	keywordstyle=\color{IDLEkey},
	commentstyle=\color{IDLEcomment},
	stringstyle=\color{IDLEstring}
}

%ARM Specific
\lstdefinestyle{ARM}{
	language=[ARM]{Assembler},
	frame=leftline,
	rulecolor=\color{BoxCode},
	numbers=left,
	tabsize=8,
	basicstyle=\footnotesize\ttfamily,
	showstringspaces=false,
	%breaklines=true,
	keywordstyle=\color{IDLEkey},
	commentstyle=\color{IDLEcomment},
	stringstyle=\color{IDLEstring}
}


